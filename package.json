{
  "name": "@hensonism/flashcards",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "prepare": "node -e \"if (process.env.CI !== 'true') { require('child_process').execSync('husky', {stdio: 'inherit'}) }\"",
    "lint": "biome check --write apps packages",
    "format": "biome format apps packages --write",
    "typecheck": "npm -ws --if-present run typecheck",
    "build": "npm -ws --if-present run build",
    "dev:web": "npm run dev --workspace @hensonism/flashcards"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.1.2",
    "husky": "^9.1.6",
    "lint-staged": "^15.2.10",
    "wait-on": "^7.2.0",
    "typescript": "^5.6.3"
  },
  "lint-staged": {
    "apps/**/*.{ts,tsx,js,jsx,json}": [
      "biome check --write --no-errors-on-unmatched"
    ],
    "packages/**/*.{ts,tsx,js,jsx,json}": [
      "biome check --write --no-errors-on-unmatched"
    ]
  },
  "engines": {
    "node": "22.20.0"
  },
  "packageManager": "npm@10.9.2",
  "dependencies": {}
}
