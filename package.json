{
  "name": "@hensonism/flashcards",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "prepare": "husky",
    "lint": "biome check --write .",
    "format": "biome format . --write",
    "typecheck": "npm -ws --if-present run typecheck",
    "build": "npm -ws --if-present run build",
    "dev:web": "npm run dev --workspace @hensonism/flashcards"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.1.2",
    "husky": "^9.1.6",
    "lint-staged": "^15.2.10",
    "wait-on": "^7.2.0",
    "typescript": "^5.6.3"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx,json}": [
      "biome check --write"
    ]
  },
  "engines": {
    "node": "22.20.0"
  },
  "packageManager": "npm@10.9.2",
  "dependencies": {}
}
